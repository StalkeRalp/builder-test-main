    <script>
        lucide.createIcons();
        const menuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const navbar = document.getElementById('navbar');
        if (menuBtn) menuBtn.addEventListener('click', () => { mobileMenu.classList.toggle('hidden'); });
        window.addEventListener('scroll', () => {
            if (window.scrollY > 20) {
                navbar.classList.add('shadow-md');
                navbar.classList.replace('h-24', 'h-20');
            } else {
                navbar.classList.remove('shadow-md');
                navbar.classList.replace('h-20', 'h-24');
            }
        });

        // EmailJS initialization
        emailjs.init("qd_1OXHxfJaEOUh7O");

        // Handle form submission
        const form = document.getElementById('suggestionForm');
        const submitBtn = document.getElementById('submitBtn');
        const btnText = document.getElementById('btnText');
        const btnIcon = document.getElementById('btnIcon');
        const formStatus = document.getElementById('formStatus');
        const successMessage = document.getElementById('successMessage');

        form.addEventListener('submit', function (e) {
            e.preventDefault();

            // Disable button and show loading state with animation
            submitBtn.disabled = true;
            submitBtn.classList.add('scale-95');
            btnText.textContent = 'Sending...';
            btnIcon.setAttribute('data-lucide', 'loader');
            btnIcon.classList.add('animate-spin');
            lucide.createIcons();
            formStatus.classList.add('hidden');
            successMessage.classList.add('hidden');

            // Send email using EmailJS
            emailjs.sendForm(
                'service_r7jr1vz',
                'template_0dnx6fs',
                form
            ).then(() => {
                // Success with enhanced animations
                submitBtn.classList.remove('scale-95');
                submitBtn.classList.add('scale-100');

                // Show success message with fade-in
                successMessage.classList.remove('hidden');
                successMessage.classList.add('animate-fade-in');

                formStatus.textContent = '✅ Redirecting to home page...';
                formStatus.className = 'text-green-600 text-center text-sm mt-4 font-medium animate-pulse';
                formStatus.classList.remove('hidden');

                // Update button with success state
                btnText.textContent = 'Sent Successfully!';
                btnIcon.setAttribute('data-lucide', 'check-circle');
                btnIcon.classList.remove('animate-spin');
                btnIcon.classList.add('animate-bounce');
                lucide.createIcons();

                // Add success color to button
                submitBtn.classList.remove('from-purple-500', 'to-purple-600');
                submitBtn.classList.add('from-green-500', 'to-emerald-600');

                // Reset form with fade out
                setTimeout(() => {
                    form.classList.add('opacity-50', 'pointer-events-none');
                    form.reset();
                }, 500);

                // Redirect to index.html after 2.5 seconds
                setTimeout(() => {
                    window.location.href = 'index.html';
                }, 2500);
            }).catch((error) => {
                // Error with shake animation
                submitBtn.classList.remove('scale-95');
                submitBtn.classList.add('animate-shake');

                formStatus.textContent = '❌ Failed to send. Please try again.';
                formStatus.className = 'text-red-600 text-center text-sm mt-4 font-semibold';
                formStatus.classList.remove('hidden');

                btnText.textContent = 'Send Suggestion';
                btnIcon.setAttribute('data-lucide', 'send');
                btnIcon.classList.remove('animate-spin');
                lucide.createIcons();

                console.error('EmailJS Error:', error);

                // Remove shake animation after it completes
                setTimeout(() => {
                    submitBtn.classList.remove('animate-shake');
                }, 500);
            }).finally(() => {
                submitBtn.disabled = false;
            });
        });
    </script>
